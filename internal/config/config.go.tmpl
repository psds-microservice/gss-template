package config

import (
	"errors"
	"fmt"
	"net/url"
	"os"
)

type Config struct {
	AppHost  string // APP_HOST — биндинг (0.0.0.0 / localhost)
	HTTPPort string // HTTP_PORT
	GRPCPort string // GRPC_PORT — порт gRPC (для grpc-gateway и нативных клиентов)
	AppEnv   string // APP_ENV — production / development
	DB       struct {
		Host     string
		Port     string
		User     string
		Password string
		Database string
		SSLMode  string
	}
}

// Validate проверяет обязательные поля конфига. В production обязателен DB_PASSWORD.
func (c *Config) Validate() error {
	if c.DB.Host == "" {
		return errors.New("config: DB_HOST is required")
	}
	if c.DB.User == "" {
		return errors.New("config: DB_USER is required")
	}
	if c.DB.Database == "" {
		return errors.New("config: DB_DATABASE is required")
	}
	if c.AppEnv == "production" && c.DB.Password == "" {
		return errors.New("config: in production DB_PASSWORD is required")
	}
	return nil
}

func Load() (*Config, error) {
	c := &Config{
		AppHost:  getEnv("APP_HOST", "0.0.0.0"),
		HTTPPort: getEnv("HTTP_PORT", "8080"),
		GRPCPort: getEnv("GRPC_PORT", "9090"),
		AppEnv:   getEnv("APP_ENV", "development"),
		DB: struct {
			Host     string
			Port     string
			User     string
			Password string
			Database string
			SSLMode  string
		}{
			Host:     getEnv("DB_HOST", "localhost"),
			Port:     getEnv("DB_PORT", "5432"),
			User:     getEnv("DB_USER", "postgres"),
			Password: getEnv("DB_PASSWORD", ""),
			Database: getEnv("DB_DATABASE", "app"),
			SSLMode:  getEnv("DB_SSLMODE", "disable"),
		},
	}
	return c, nil
}

func (c *Config) DSN() string {
	return fmt.Sprintf("host=%s port=%s user=%s password=%s dbname=%s sslmode=%s",
		c.DB.Host, c.DB.Port, c.DB.User, c.DB.Password, c.DB.Database, c.DB.SSLMode)
}

// DatabaseURL возвращает postgres URL для golang-migrate (postgres://user:pass@host:port/dbname?sslmode=...).
func (c *Config) DatabaseURL() string {
	pass := url.QueryEscape(c.DB.Password)
	return fmt.Sprintf("postgres://%s:%s@%s:%s/%s?sslmode=%s",
		c.DB.User, pass, c.DB.Host, c.DB.Port, c.DB.Database, c.DB.SSLMode)
}

func (c *Config) HTTPPort() string {
	if c.HTTPPort == "" {
		return "8080"
	}
	return c.HTTPPort
}

// GRPCPort returns the gRPC server port (default 9090).
func (c *Config) GRPCPort() string {
	if c.GRPCPort == "" {
		return "9090"
	}
	return c.GRPCPort
}

func getEnv(key, def string) string {
	if v := os.Getenv(key); v != "" {
		return v
	}
	return def
}
