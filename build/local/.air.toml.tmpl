# Air config for hot reload (optional: go install github.com/cosmtrek/air@latest)
root = "../.."
tmp_dir = "tmp"
[build]
  cmd = "go build -o ./build/local/tmp/{{.Project.K}} ./cmd/{{.Project.K}}"
  bin = "./build/local/tmp/{{.Project.K}}"
  full_bin = "./build/local/tmp/{{.Project.K}} api"
  include_ext = ["go", "tpl", "tmpl", "html"]
  exclude_dir = ["tmp", "vendor", "node_modules"]
  delay = 1000
[log]
  time = false
[color]
  main = "magenta"
  watcher = "cyan"
