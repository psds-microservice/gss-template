# Production image for Kubernetes
FROM golang:1.21-alpine AS builder
WORKDIR /app
COPY go.mod ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o /{{.Project.K}} ./cmd/{{.Project.K}}

FROM alpine:3.19
RUN apk --no-cache add ca-certificates
WORKDIR /app
COPY --from=builder /{{.Project.K}} .
USER nobody:nobody
EXPOSE 8080
CMD ["./{{.Project.K}}"]
